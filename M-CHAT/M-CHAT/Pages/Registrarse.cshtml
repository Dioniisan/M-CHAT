@page
@model M_CHAT.Pages.RegistrarseModel
@{
}

<h1 class="text-dark">Registrarse</h1>
<div class="d-flex justify-content-end">
    <a asp-page="/Index" class="btn btn-danger m-1">Cancelar</a>
</div>
<br />
    <div class="card" style="width: 69.9rem;">
        <div class="card-header">
            Datos del tutor
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="form-group">
                    <label for="ControlInput1">Nombre</label>
                    <input type="text" class="form-control" id="ControlInput1" placeholder="Escriba su nombre">
                </div>
            </li>
            <li class="list-group-item">
                <div class="form-group">
                    <label for="ControlInput2">Direccion</label>
                    <input type="text" class="form-control" id="ControlInput2" placeholder="Calle 01 #234 x 56 y 57">
                </div>
            </li>
            <li class="list-group-item">
                <div class="form-group">
                    <label for="ControlInput3">Correo Electronico</label>
                    <input type="text" class="form-control" id="ControlInput3" placeholder="Correo@correo.com">
                </div>
            </li>
        </ul>
    </div>
<br />
<script>
    function mostrar() {
        var checkBox = document.getElementById("chbox1");
        // Get the output text
        var mostrar = document.getElementById("Datos2");

        // If the checkbox is checked, display the output text
        if (checkBox.checked == true) {
            mostrar.style.display = "block";
        } else {
            mostrar.style.display = "none";
        }
    }
</script>
    <div>
        <input type="checkbox" id="chbox1" value="firstch" onclick="mostrar()" />
        <label for="chbox1">
            Quiero ingresar los datos de 1 niño como minimo.
        </label>
    </div>
    <div id="Datos2" class="flex-grow-1 p-2" style="display:none">
        <!--Nav tabs-->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" data-toggle="tab" href="#datosInfante" role="tab"
                   aria-controls="workshop" aria-selected="true">Datos del Infante</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-toggle="tab" href="#datosCEdu" role="tab"
                   aria-controls="containerws" aria-selected="false">Datos del Centro Educativo</a>
            </li>
        </ul>
        <!--TabPanes-->
        <div class="tab-content">
            <div id="datosInfante" class="tab-pane fade show active" role="tabpanel" aria-labelledby="home-tab">
                <div class="form-group row">
                    <label for="ControlInput4" class="col-form-label col-sm-2">
                        Nombre Completo:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput4" placeholder="Nombres Apellidos">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput5" class="col-form-label col-sm-2">
                        CURP:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput5" placeholder="ABCD012345EFGHI67">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput6" class="col-form-label col-sm-2">
                        Nacionalidad:
                    </label>
                    <div class="form-group col-sm-10">
                        <select class="form-control" id="sel1">
                            <option>Méxicana</option>
                            <option>Española</option>
                            <option>Estado Unidense</option>
                            <option>*otra*</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput7" class="col-form-label col-sm-2">
                        Fecha de nacimiento:
                    </label>
                    <div class="col-sm-10">
                        <input type="date" data-role="" class="form-control" id="ControlInput7">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput8" class="col-form-label col-sm-2">
                        Genero:
                    </label>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="optradio">

                            Masculino

                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="optradio">

                            Femenino

                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="optradio">

                            Otro

                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput6" class="col-form-label col-sm-2">
                        Foto del niño:
                    </label>
                    <div class="col-sm-10">
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon03">
                                <label class="custom-file-label" for="inputGroupFile03">Elija una imagen desde su equipo.</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="datosCEdu" class="tab-pane fade" role="tabpanel" aria-labelledby="containerws-tab">
                <div class="form-group row">
                    <label for="ControlInput9" class="col-form-label col-sm-2">
                        Clave:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput9" placeholder="Escriba la clave del Centro Educativo">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput10" class="col-form-label col-sm-2">
                        Nombre:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput10" placeholder="Escriba el nombre del Centro Educativo">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput11" class="col-form-label col-sm-2">
                        Direccion:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput11" placeholder="Calle 01 #234 x 56 y 57">
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="d-flex justify-content-end">
    <a asp-page="/SesionDetails" class="btn btn-success m-1">Registrarse</a>
</div>
