        <a asp-page="/Index" class="btn btn-danger m-1">Cancelar</a>
        <a asp-page="/Test" class="btn btn-success m-1">Test></a>

    </div>
<br />
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 0%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<hr />
@*<h3>@Model.Ninios.Count()</h3>*@
    <div class="card" style="width: 69.9rem;">
        <div class="card-header">
            Datos del tutor
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="form-group">
                    <label for="ControlInput1" asp-for="Tutor.Nombre"></label>
                    <input type="text" class="form-control form-text" id="ControlInput1" placeholder="Escriba su nombre" asp-for="Tutor.Nombre">
                </div>
            </li>
            <li class="list-group-item">
                <div class="form-group">
                    <label for="ControlInput2" asp-for="Tutor.Direccion"></label>
                    <input type="text" class="form-control" id="ControlInput2" placeholder="Calle 01 #234 x 56 y 57">
                </div>
            </li>
            <li class="list-group-item">
                <div class="form-group">
                    <label for="ControlInput3" asp-for="Cuenta.Correo"></label>
                    <input type="text" class="form-control" id="ControlInput3" placeholder="Correo@correo.com">
                </div>
            </li>
        </ul>
    </div>


    <div class="flex-grow-1 p-2">
        <!--Nav tabs-->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" data-toggle="tab" href="#datosInfante" role="tab">
                    Datos del Infante
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-toggle="tab" href="#datosCEdu" role="tab">
                    Datos del Centro Educativo
                </a>
            </li>
        </ul>
        <!--TabPanes-->
        <div class="tab-content">
            <div id="datosInfante" class="tab-pane fade show active" role="tabpanel" aria-labelledby="datosInfante-tab">
                <div class="form-group row">
                    <label for="ControlInput4" class="col-form-label col-sm-2" asp-for="Ninio.Nom_Comp">
                        Nombre Completo:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput4" placeholder="Nombres Apellidos">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput5" class="col-form-label col-sm-2" asp-for="Ninio.CURP">
                        CURP:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput5" placeholder="ABCD012345EFGHI67">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput6" class="col-form-label col-sm-2" asp-for="Ninio.Nacionalidad">
                        Nacionalidad:
                    </label>
                    <div class="form-group col-sm-10">
                        <select class="form-control" id="sel1">
                            <option>Méxicana</option>
                            <option>Española</option>
                            <option>Estado Unidense</option>
                            <option>*otra*</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput7" class="col-form-label col-sm-2" asp-for="Ninio.Fecha_nac">
                        Fecha de nacimiento:
                    </label>
                    <div class="col-sm-10">
                        <input type="date" data-role="" class="form-control" id="ControlInput7">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput8" class="col-form-label col-sm-2" asp-for="Ninio.Genero">
                        Genero:
                    </label>
                    <div class="col-sm-10">
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="optradio">

                                Masculino

                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="optradio">

                                Femenino

                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="optradio">

                                Otro

                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput6" class="col-form-label col-sm-2" asp-for="Ninio.Foto">
                        Foto del niño:
                    </label>
                    <div class="col-sm-10">
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon03">
                                <label class="custom-file-label" for="inputGroupFile03">Elija una imagen desde su equipo.</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="datosCEdu" class="tab-pane fade" role="tabpanel" aria-labelledby="datosCEdu-tab">
                <div class="form-group row">
                    <label for="ControlInput9" class="col-form-label col-sm-2" asp-for="CentroE.Clave">
                        Clave:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput9" placeholder="Escriba la clave del Centro Educativo" asp-for="CentroE.Clave">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput10" class="col-form-label col-sm-2" asp-for="CentroE.Nombre">
                        Nombre:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput10" placeholder="Escriba el nombre del Centro Educativo">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ControlInput11" class="col-form-label col-sm-2" asp-for="CentroE.Direccion">
                        Direccion:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ControlInput11" placeholder="Calle 01 #234 x 56 y 57">
                    </div>
                </div>
            </div>
        </div>
    </div>


