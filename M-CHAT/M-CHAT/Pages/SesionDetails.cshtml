    <a asp-page="#" class="btn btn-success m-1">Agregar Niño</a>
</div>
<br />

@*buscar la manera en que la imagen del niño se muestre a la izquierda y la informacion a la derecha. De esta manera ahorramos espacio vertical y mostramos toda la info de un niño a la vez*@
@if (Model.Ninios.Ninios.Any())
{
    @foreach (var item in Model.Ninios.Ninios)
    {
        var foto = $"/Images/{(string.IsNullOrEmpty(item.Foto) ? "notfound.jpg" : item.Foto)}";
        <div class="d-flex justify-content-end">

            <div class="card text-right" style="max-width: 36rem;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@foto" class="card-img" asp-append-version="true" style="width:210px;height:240px"/>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Nom_Comp</h5>
                            <p class="card-text">
                                <ul>
                                    <li>
                                        <select asp-for="@item.Nacionalidad" asp-items="Html.GetEnumSelectList<M_CHAT.Models.Nacionalidad>()" disabled></select>
                                    </li>
                                    <li>
                                        @item.CURP
                                    </li>
                                    <li>
                                        @item.Genero
                                    </li>
                                </ul>
                            </p>
                            <div class="d-flex justify-content-end">
                                <a asp-page="/Test" class="btn btn-success m-1">Comenzar un test</a>
                                <a asp-page="/Resultados" class="btn btn-info m-1">Ver el resultado</a>
                                <a asp-page="#" class="btn btn-danger m-1">Eliminar Niño</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

