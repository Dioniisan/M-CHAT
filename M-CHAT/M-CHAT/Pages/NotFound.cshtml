@page
@model M_CHAT.Pages.NotFoundModel
@{
    ViewData["Title"] = "NotFound";
}

<div class="row m-2">
    <div class="col-md-6 my-auto">
        <h1 class="text-dark">Not Found</h1>
        <p class="text-danger align-middle">
            Por aqui no es... Parece que lo que has solicitado no existe.
        </p>
    </div>
    <div class="col-md-6">
        <img src="https://img.icons8.com/all/500/broken-robot.png" alt="NotFound" asp-append-version="true"
             style="width:450px; height:auto" />
    </div>
</div>
<div class="d-flex justify-content-center mb-3">
    <a asp-page="/Index" class="btn btn-primary">Clic aquí para regresar al inicio.</a>
</div>
